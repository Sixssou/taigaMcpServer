{
  "name": "taiga-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Monorepo for Taiga integration - MCP Server, REST API, and Core Library",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=packages/taiga-core",
    "build:mcp": "npm run build --workspace=packages/taiga-mcp-server",
    "build:api": "npm run build --workspace=packages/taiga-rest-api",
    "dev:mcp": "npm run dev --workspace=packages/taiga-mcp-server",
    "dev:api": "npm run dev --workspace=packages/taiga-rest-api",
    "start:mcp": "npm run start --workspace=packages/taiga-mcp-server",
    "start:api": "npm run start --workspace=packages/taiga-rest-api",
    "test": "npm run test --workspaces",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greddy7574/taigaMcpServer"
  },
  "author": "greddy7574@gmail.com",
  "license": "ISC"
}
